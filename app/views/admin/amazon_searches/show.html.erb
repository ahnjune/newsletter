<h2>Amazon Search</h2>

<p>
  This is a test area that will allow you to search Amazon for particular keywords.
</p>

<% form_tag nil, :method => :get, :class => "noformat" do %>
  <%= text_field_tag :query, params[:query] %>
<% end %>

<% if @search %>
  <h2>Search results for: <%= h @query %></h2>
  
  <% if @search.items.empty? %>
    No results
  <% end -%>
  
  <ul class="amazon">
    <% for item in @search.items %>
      <% item_attributes = item.item_attributes[0] %>
      <li>
        <%= image_tag "icons/amazon.png" %>
        <%= image_tag item.small_image.url if item.small_image %>
        (<%= item.asin[0] %>)
        <%= h item_attributes.title %>
      </li>
    <% end %>
  </ul>
  
<% end -%>

