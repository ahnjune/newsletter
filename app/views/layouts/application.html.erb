<html>
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title>Newsletter</title>
    
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag :defaults %>
    
  </head>
  
  <body>
    <div id="header">
      <%= link_to image_tag("bleep_header.png"), root_path %>
      <%= link_to image_tag("header.png"), root_path %>
      <% if @admin_area %>
        <%= link_to image_tag("admin.png"), admin_root_path %>
      <% end %>
    </div>
    <div id="navigation">
      <% if @admin_area %>
        <%= link_to "Feeds", admin_feeds_path, :class => (@nav == :feeds ? "active" : nil) %>
        <%= link_to "Section" %>
        <%= link_to "Section" %>
      <% end %>
    </div>
    <% flash.keys.each do |key| %>
      <%= content_tag :div, flash[key], :class => "flash #{key}" %>
    <% end -%>
    <div id="content">
      <%= yield :layout %>
    </div>
  </body>
</html>